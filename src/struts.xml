<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts  
Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">

<struts>

	  
	<package name="default" extends="struts-default">
		<action name="login" class="com.idgform.actions.Login">
			<result name="success">/form.jsp</result>
			<result name="auth_failed">/auth_failed.jsp</result>
			<result name="no_user">/auth_failed.jsp</result>
			<result name="error">/internal_error.jsp</result>
		</action>
		
		<action name="logout" class="com.idgform.actions.Logout">
			<result name="success">/index.jsp</result>
		</action>
	</package>

	<package name="operations" extends="json-default">
		
		<action name="list_tasks" class="com.idgform.actions.ListTasks">
			<interceptor-ref name="defaultStack"></interceptor-ref>
			<interceptor-ref name="json">
    			<param name="enableSMD">true</param>
			</interceptor-ref>
			<result type="json"/>
		</action>
		
		<action name="add_task" class="com.idgform.actions.AddTask">
			<interceptor-ref name="defaultStack"></interceptor-ref>
			<interceptor-ref name="json">
    			<param name="enableSMD">true</param>
			</interceptor-ref>
			<result type="json"/>
		</action>
		
		<action name="update_task" class="com.idgform.actions.UpdateTask">
			<interceptor-ref name="defaultStack"></interceptor-ref>
			<interceptor-ref name="json">
    			<param name="enableSMD">true</param>
			</interceptor-ref>
			<result type="json"/>
		</action>
		
		<action name="delete_task" class="com.idgform.actions.DeleteTask">
			<interceptor-ref name="defaultStack"></interceptor-ref>
			<interceptor-ref name="json">
    			<param name="enableSMD">true</param>
			</interceptor-ref>
			<result type="json"/>
		</action>
	</package>

</struts>  